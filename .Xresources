! Font setup
!#define FONT_NAME Source Code Pro 
!#define FONT_STYLE Medium
#define FONT_NAME DejaVu Sans Mono
#define FONT_STYLE Book
#define FONT_SIZE 12

! Rxvt-unicode
URxvt.geometry: 120x40
URxvt*font: xft:FONT_NAME:style=FONT_STYLE:size=FONT_SIZE
URxvt*boldFont: xft:FONT_NAME:style=Bold:size=FONT_SIZE
URxvt*italicFont: xft:FONT_NAME:style=Italic:size=FONT_SIZE
URxvt*boldItalicFont: xft:FONT_NAME:style=Bold Italic:size=FONT_SIZE
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.borderWidth: 0
URxvt.internalBorder: 0
URxvt.externalBorder: 0
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 2048
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.depth: 32
URxvt.background: rgba:0000/0000/0200/d800
URxvt.iso14755: false

! rofi
rofi.modi:    window,run,drun,ssh
rofi.opacity: 75
rofi.width:   20
rofi.lines:   8
rofi.columns: 1
rofi.font:    Ubuntu Mono 16
rofi.bw:      2
rofi.location:                       0
rofi.levenshtein-sort:               true
rofi.case-sensitive:                 false
rofi.sidebar-mode:                   false
rofi.eh:                             1
rofi.parse-hosts:                    false
rofi.parse-known-hosts:              true
rofi.fuzzy:                          true
rofi.glob:                           false
rofi.tokenize:                       true
rofi.m:                              -1
rofi.separator-style:                solid
rofi.hide-scrollbar:                 true
